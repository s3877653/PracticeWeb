<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorLoginPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorLoginPage.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PhimMoi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/HomePage/Index">PhimMoi</a>
                        </li>     
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route-category="phimLe" asp-page="/FilteredPage/FilteredMoviePage">Phim Lẻ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-route-category="phimBo" asp-page="/FilteredPage/FilteredMoviePage">Phim Bộ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle nav-link text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Thể loại
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Romance</a></li>
                                <li><a class="dropdown-item" href="#">funny </a></li>
                                <li><a class="dropdown-item" href="#">vintage </a></li>
                                <li><a class="dropdown-item" href="#">horror </a></li>
                                <li><a class="dropdown-item" href="#">phylosophy </a></li>
                                <li><a class="dropdown-item" href="#">war </a></li>
                                <li><a class="dropdown-item" href="#">sport </a></li>
                                <li><a class="dropdown-item" href="#">cartoon </a></li>
                                <li><a class="dropdown-item" href="#">Ci-fi </a></li>
                                <li><a class="dropdown-item" href="#">Anime </a></li>
                                
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Quốc Gia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Năm Phát Hành</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Phim Chiếu rạp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Trailer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="">Top Phim</a>
                        </li>
                    </ul>    
                </div>             
               <a class="nav-link text-dark btn btn-primary" style="color:white !important;font-weight:500;" asp-area="" asp-page="/LoginVModel/Index">Login</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-dark btn btn-secondary" style="color:white !important;font-weight:500;" asp-area="" asp-page="/Shared/Logout">Log out</a>
                }
                
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - RazorLoginPage - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>